<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/kolor_tla"
    tools:context=".MainActivity">
<!--
komentarz musi byÄ‡ poza elementami
-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margines_tekstu"
        android:textAlignment="center"
        android:textSize="@dimen/rozmiar_czcionki_pytanie"
        android:textColor="@color/white"
        android:text="@string/polecenie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="odpowiedzOk"
            android:backgroundTint="@color/white"
            android:layout_margin="@dimen/margines_tekstu"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="odpowiedzNo"
            android:backgroundTint="@color/zielony"
            android:layout_margin="@dimen/margines_tekstu"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="odpowiedzNo"
            android:background="@color/granatowy"
            android:layout_margin="@dimen/margines_tekstu"
            android:text="Button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/czerwony"
            android:layout_margin="@dimen/margines_tekstu"
            android:onClick="odpowiedzOk"
            android:text="Button" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="odpowiedzNo"
            android:backgroundTint="@color/black"
            android:layout_margin="@dimen/margines_tekstu"
            android:text="Button" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="odpowiedzNo"
            android:backgroundTint="@color/zolty"
            android:layout_margin="@dimen/margines_tekstu"
            android:text="Button" />
    </LinearLayout>

</LinearLayout>